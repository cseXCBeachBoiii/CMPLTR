      <div class="form-group">
        <button type="button" class="btn btn-dark large-btn" data-toggle="modal" data-target="#alarmModal">
          Set Alarm
        </button>
        <small id="emailHelp" class="form-text text-muted">Alarm has not been set.</small>

        <!-- Set Alarm Modal -->
